{{#if success}}
    <div class="alert alert-success fade show" data-fade="3000">
        {{success}}
    </div>
{{/if}}
{{#if info}}
    <div class="alert alert-info fade show" data-fade="3000">
        {{info}}
    </div>
{{/if}}
{{#if warning}}
    <div class="alert alert-warning fade show" data-fade="7000">
        {{warning}}
    </div>
{{/if}}